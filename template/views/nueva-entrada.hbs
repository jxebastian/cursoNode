{{>header}}
	<div class="container">
		<div class="row m-3">
			<h3>Nueva entrada</h3>
		</div>
		<div class="row justify-content-center m-3">
			<form action="/upload" method="post" enctype="multipart/form-data">
				<label>Título:</label>
				<input type="text" class="form-control" name="titulo" placeholder="Titulo" required><br>
				<label>Descripción(Opcional)</label>
				<textarea class="form-control" name="descripcion" rows="5" placeholder="Descripcion"></textarea><br>
				<label>Archivo</label>
				<input type="file" class="form-control" name="archivo" required>
			</form>
		</div>
		{{#if uploaded}}
			<div class=" row justify-content-center m-3 alert alert-success">
  				Se han guardado los cambios
			</div>
			<div class="row justify-content-center m-3">
				<div class="col d-flex justify-content-center">
					<a href="javascript:history.back()" class="btn btn-primary">Regresar</a>
				</div>
			</div>
		{{else}}
			<div class="row justify-content-center m-3">
				<div class="col d-flex justify-content-end">
					<a href="javascript:history.back()" class="btn btn-primary">Regresar</a>
				</div>
				<div class="col d-flex justify-content-start">
					<form method="post">
						<button type="submit" class="btn btn-primary">Aceptar</button>
					</form>
				</div>
			</div>
		{{/if}}
		
	</div>
{{>footer}}
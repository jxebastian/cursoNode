{{>header}}
<div class="container">
    {{#if existe}}
    {{#if actualizado}}
    <div class="alert alert-success" role="alert">
        {{mensaje}}
    </div>
    {{/if}}
    <div class="row justify-content-center">
        <div class="col-sm-7 shadow-lg p-3 mb-5 bg-white rounded">
            <h3>Cambiar rol de un usuario</h3>
            <form action="" method="post" class="regForm">
                <div class="form-group">
                    <label for="nombre">Identifici√≥n</label>
                    <input type="numbre" class="form-control" id="identificacion" name="identificacion"
                        value="{{usuario.identificacion}}" readonly>
                </div>
                <div class="form-group">
                    <label for="rol">Rol del usuario</label> <br>
                    <div class="row">
                        <label class="col-sm-1">Actual</label>
                        <div class="col-sm-11">
                            <input type="text" class="form-control" value={{usuario.rol}} readonly>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <label class="col-sm-1">Nuevo</label>
                        <div class="col-sm-11">
                            <select class="custom-select" name="rol">
                                <option value="Aspirante">Aspirante</option>
                                <option value="Docente">Docente</option>
                            </select>
                        </div>
                    </div>
                </div>
                <a href="/roles-usuarios" class="btn btn-primary">Regresar</a>
                <button type="submit" class="btn btn-primary">Cambiar rol</button>
            </form>
        </div>
    </div>
    {{else}}
    <div class="alert alert-danger" role="alert">
        {{mensaje}}
    </div>
    {{/if}}
</div>
{{>footer}}